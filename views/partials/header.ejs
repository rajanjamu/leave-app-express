<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LEAVE</title>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
    <link rel="icon" href="./images/favicon.ico?v=1.1" sizes="16x16">
</head>
<body>

<!-- Navigation Bar or MENU -->
<div class="ui inverted menu">
    <div class="ui container">
        <a href="/" class="header item">LEAVE</a>
        <div class="right menu">

            <% if (currentUser) { %> 
                <a href="#" class="item">
                    <i class="user icon"></i>
                    Hi, <%= currentUser.username.charAt(0).toUpperCase() + currentUser.username.slice(1) %> 
                </a>
                <% if (currentUser.admin === false) { %> 
                    <a href="/leaves/new" class="item"><i class="plus icon"></i></a>
                <% } %> 
                <a href="/logout" class="item"><i class="sign-out icon"></i></a>
            <% } else { %> 
                <a href="/login" class="item"><i class="sign-in icon"></i></a>
            <% } %>
            
        </div>
    </div>
</div>

<% if ((error && error.length > 0) || (success && success.length > 0)) { %> 

<div id="message">
    <div class="ui center aligned grid ">
        <div class="column ">

                <% if (error && error.length > 0) { %> 
                    <div class="ui orange message">
                        <p><%= error %></p>
                    </div>
                <% } %> 

                <% if (success && success.length > 0) { %> 
                    <div class="ui olive message">
                        <p><%= success %></p>
                    </div>
                <% } %> 
    
        </div>
    </div>
</div>

<% } %>


